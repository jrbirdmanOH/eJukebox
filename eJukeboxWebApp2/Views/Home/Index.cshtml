@{
    ViewData["Title"] = "Home Page";
}
<style>
    .dummy { margin-top: 100%}
    .thumbnail {
        position: absolute;
        top: 15px;
        bottom: 0;
        left: 15px;
        right: 0;
        text-align: center;
        vertical-align: middle;
        line-height: 200px;
        font-size: 3em;
    }
    .menuitem a:hover {
        background-color: yellow !important;
        text-decoration: none !important;
    }
    .purple {
        background-color: silver;
        color: black !important;
    }
</style>
@if (User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="dummy"></div>
                <a class="thumbnail purple menuitem" href="#x">Gigs</a>
            </div>
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="dummy"></div>
                <a class="thumbnail purple menuitem" href="#x">Songbook</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p style="margin-top: 50px">This is where you'd put pictures and other stuff that the public would see. Maybe a notice of your next upcoming gig and link to the venue?</p>
            </div>
        </div>
    </div>
}
